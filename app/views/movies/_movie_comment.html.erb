<div class="col-md-12">

  <h3>Reviews(<%= @movies.comments.length %>)</h3>
  <%= form_for([movies, movies.comments.new],class:"form-inline") do |f| %>

    <div class="form-group">
      <img alt="<% movies.title %>" src="<%= movies.comments.first.user.image_url %>" class="img-thumbnail user-img-img-show" align="middle"/>
      <%= f.text_area :body,class: "comment-box" %>
    </div>
      <div class="form-group comment-show">

      <%= f.submit "submit",class: "btn btn-primary" %>
    </div>
  <% end %>

</div>
