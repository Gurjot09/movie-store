<div class="col-md-12">
  Be the First to Comment
  <h4>Reviews</h4>
  <%= form_for([movies, movies.comments.new],class:"form-inline") do |f| %>

    <div class="form-group">
      <img alt="<% movies.title %>" src="<%= movies.image_url %>" class="img-thumbnail user-img-img-show" align="middle"/>
      <%= f.text_area :body,class: "comment-box" %>
    </div>
      <div class="form-group comment-show">

      <%= f.submit "submit",class: "btn btn-primary" %>
    </div>
  <% end %>

</div>
